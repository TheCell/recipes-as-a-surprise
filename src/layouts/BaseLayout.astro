---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import { siteConfig } from '@/data/site.config'
const { title, description, image, articleDate } = Astro.props

const titleSeparator = 'â€¢'
const siteTitle = `${title} ${titleSeparator} ${siteConfig.title}`;
---

<html lang='en' class='scroll-smooth'>
	<head>
		<title>{ siteTitle }</title>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
	</head>

	<body>
		<Header />
		<slot />
		<Footer />

		<style>
			body {
				display: grid;
				grid-template-columns: 4fr 8fr 4fr;
				grid-template-rows: 50px auto;
				grid-template-areas: 
					"header header header"
					"recipeHeader recipeHeader recipeHeader"
					"sidepanelleft content sidepanelright"
					"footer footer footer";
			}

			@media screen and (max-width: 768px) {
				body {
					display: grid;
					grid-template-columns: 1fr;
					grid-template-rows: 50px auto;
					grid-template-areas: 
						"header"
						"recipeHeader"
						"sidepanelleft"
						"content"
						"sidepanelright"
						"footer";
				}
			}
		</style>
	</body>
</html>
