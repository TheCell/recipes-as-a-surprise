import BaseLayout from '@/layouts/BaseLayout';
import { getAllTags } from '@/utils';

export async function getStaticPaths() {
    const tags = await getAllTags();

    return tags.map((tag) => ({
		params: { tag },
		props: { tag }
	}))
}

